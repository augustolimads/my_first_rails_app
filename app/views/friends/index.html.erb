<h1>Friends</h1>

<div id="friends">
<table class="table table-hover table-bordered table-striped">
  <caption>Lista de amigos</caption>
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do | friend | %>
      <%= render friend %>
    <% end %>
  </tbody>
</table>
  <%= link_to 'New Friend', 
    new_friend_path, 
    class:"btn btn-secondary"
  %>
</div>