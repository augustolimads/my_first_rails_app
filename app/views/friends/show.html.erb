<div class="p-5 mb-4 bg-body-tertiary rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5"><%= @friend.first_name %> <%= @friend.last_name %></h1>
    <p class="col-md-8 fs-5">
      <%= @friend.email %> | <%= @friend.phone %> | @<%= @friend.twitter %>
    </p>
    <hr />
    <div class="d-flex align-items-center gap-2">
      <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %>
      <%= link_to "Back", friends_path, class:"btn btn-secondary" %>
      <%= button_to "Destroy", @friend, method: :delete, class:"btn btn-danger" %>
    </div>
  </div>
</div>
 